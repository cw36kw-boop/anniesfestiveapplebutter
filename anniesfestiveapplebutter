    <!-- Calculator Card --><main id="calculator-card" class="bg-white w-full max-w-2xl rounded-xl p-6 md:p-8 card-shadow border border-red-200">
        <h2 class="text-2xl font-semibold mb-6 text-red-800 border-b pb-3">Order & Shipping Calculator</h2>

        <!-- Product Inputs --><div class="space-y-6">
            
            <!-- Sugar-Free Option Toggle --><div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200">
                <label for="sugar-free" class="flex items-center cursor-pointer">
                    <span class="text-lg font-medium text-gray-700 mr-3">Sugar-Free Option</span>
                    <input type="checkbox" id="sugar-free" class="h-5 w-5 text-red-600 rounded focus:ring-red-500" onchange="calculateTotal()">
                </label>
                <span class="text-sm text-gray-500">(Adds $0.50 per item)</span>
