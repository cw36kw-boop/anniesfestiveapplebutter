    </main>

    <script>
        // Constants for pricing and shipping
        const PRICE_PINT_REGULAR = 9.99;
        const PRICE_PINT_SUGAR_FREE = 10.49; // 9.99 + 0.50
        const PRICE_HALF_PINT_REGULAR = 6.99;
        const PRICE_HALF_PINT_SUGAR_FREE = 7.49; // 6.99 + 0.50

        const SHIPPING_BASE_RATE = 5.00;
        const SHIPPING_PER_ITEM = 1.50;

        // Function to calculate the total cost dynamically
        function calculateTotal() {
            // 1. Get quantities and options
            const pints = parseInt(document.getElementById('pints').value) || 0;
            const halfPints = parseInt(document.getElementById('half-pints').value) || 0;
            const isSugarFree = document.getElementById('sugar-free').checked;
            
            // Prevent negative quantities
            if (pints < 0) document.getElementById('pints').value = 0;
            if (halfPints < 0) document.getElementById('half-pints').value = 0;

            // 2. Determine item prices based on sugar-free option
            const pintPrice = isSugarFree ? PRICE_PINT_SUGAR_FREE : PRICE_PINT_REGULAR;
            const halfPintPrice = isSugarFree ? PRICE_HALF_PINT_SUGAR_FREE : PRICE_HALF_PINT_REGULAR;

            // 3. Calculate product subtotal
            const productSubtotal = (pints * pintPrice) + (halfPints * halfPintPrice);
            
            // 4. Calculate shipping cost
            const totalItems = pints + halfPints;
            let shippingCost = 0;

            if (totalItems > 0) {
                // $5.00 flat rate + $1.50 per item
                shippingCost = SHIPPING_BASE_RATE + (totalItems * SHIPPING_PER_ITEM);
            }
            // Shipping cost remains $0.00 if no items are ordered.

            // 5. Calculate final total
            const totalCost = productSubtotal + shippingCost;

            // 6. Update the display in the DOM
            document.getElementById('subtotal').textContent = formatCurrency(productSubtotal);
            document.getElementById('shipping-cost').textContent = formatCurrency(shippingCost);
            document.getElementById('total-cost').textContent = formatCurrency(totalCost);
        }

        // Helper function for currency formatting
        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD'
            }).format(amount);
        }

        // Initialize the calculation on page load
        window.onload = function() {
            calculateTotal();
        };
    </script>
